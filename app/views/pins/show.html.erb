<p class = 'btn btn-success'><%= link_to 'Back', pins_path %></p>

<div class ="row">
	<div class = "col-md-offset-2 col-md-8">
		<div class = "panel panel-default">
			<div class="panel-heading center">
			<%= image_tag @pin.image.url(:medium) %> 
			</div>
		<div class="panel-body">
			  <%= @pin.description %></p>
			 <p><strong><%= @pin.user.email if @pin.user %> |
			<% if @pin.user == current_user %>
			 <%= link_to edit_pin_path(@pin) do %>
			 	<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit </strong>
			 	<% end %> </p>
			<% end %>
		</div>
	</div>
</div>
